<odoo>
  <data>
    <!-- explicit list view definition -->
   <record id="list_vue_transit" model="ir.ui.view">
    <field name="name">tree.view.transit</field>
    <field name="model">fedex.transit</field>
    <field name="arch" type="xml">
      <tree> 
          <field name="name" />
          <field name="value" />
          <field name="description" />
      </tree>
    </field>
  </record>
  <!-- Vue formulaire -->
  <record id="transit_form_view" model="ir.ui.view">
    <field name="name">transit.form.view</field>
    <field name="model">fedex.transit</field>
    <field name="arch" type="xml">
      <form> 
      <!-- <header>
        <button name="next_level" type="object" string="Etape suivante" class="oe_highlight" />
        <field name="status" widget="statusbar" nolabel="1"></field>
      </header> -->
      <sheet>
        <group >
           <group>
              <separator string="Informations" colspan="1"/>
              <field name="name" />
              <field name="description" />
              <!-- <field name="test" options="{'no_create':True,'no_create_edit':True}"/> -->
           </group> 
        </group>
        <!-- <notebook colspan="4">
            <page string="test">
                <field name="test" nolabel="1"/>
            </page>
        </notebook> -->
      </sheet>
      </form>
    </field>
  </record>

  <record id="action_transit" model="ir.actions.act_window">
    <field name="name">Gestion des Transits</field>
    <field name="res_model">fedex.transit</field>
    <field name="view_mode">tree,form</field>
  </record>

  <record id="action_validation" model="ir.actions.act_window">
    <field name="name">Gestion des validations</field>
    <field name="res_model">fedex.transit</field>
    <field name="view_mode">tree,form</field>
  </record>

  <record id="action_parametre" model="ir.actions.act_window">
    <field name="name">Configuration</field>
    <field name="res_model">fedex.transit</field>
    <field name="view_mode">tree,form</field>
  </record>
  <record id="action_sortie" model="ir.actions.act_window">
    <field name="name">Sortie Colis</field>
    <field name="res_model">fedex.transit</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="transit_root_menu"  name="Fedex Transit"/>
  <menuitem id="transit_sous_menu"  parent="transit_root_menu" name="Colis"/>
  <menuitem id="operations"  parent="transit_root_menu" name="OpÃ©rations"/>
  <menuitem id="validation"  parent="transit_root_menu" name="Validation"/>
  <menuitem id="parametre"  parent="transit_root_menu" name="Parametre"/>

  <!-- ajout des sous menus pour chaque categorie -->
  <menuitem id="ajout_colis_menu" action="action_transit"  parent="transit_sous_menu" name="Ajouter un colis"/>
  <menuitem id="sortie_colis_menu" action="action_sortie"  parent="operations" name="Sortie colis "/>
  <menuitem id="mes_validations_menu" action="action_validation"  parent="validation" name="Mes demandes"/>
  <menuitem id="ajout_transitaires_menu" action="action_parametre"  parent="parametre" name="Transitaires"/>

    <!-- explicit list view definition -->




  </data>
</odoo>